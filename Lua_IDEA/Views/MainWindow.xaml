<Window
    x:Class="Lua_IDEA.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:Lua_IDEA.Entities"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Window appbar -->
        <Border x:Name="titleBar" Grid.Row="0" VerticalAlignment="Top">
            <TextBlock Text="Lua_IDEA" Margin="28,8,0,8" />
        </Border>

        <!-- Menu -->
        <MenuBar Grid.Row="1">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="New" Command="{x:Bind viewModel.CreateNewFileCommand}"/>
                <MenuFlyoutItem Text="Open" Command="{x:Bind viewModel.OpenFileCommand}"/>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Save" Command="{x:Bind viewModel.SaveFileCommand}"/>
                <MenuFlyoutItem Text="Save As" Command="{x:Bind viewModel.SaveFileAsCommand}"/>
                <MenuFlyoutItem Text="Save All" Command="{x:Bind viewModel.SaveAllFilesCommand}"/>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Close" Command="{x:Bind viewModel.CloseFileCommand}"/>
            </MenuBarItem>

            <MenuBarItem Title="Edit">
                <ToggleMenuFlyoutItem Text="В Избранное" IsChecked="{x:Bind viewModel.SelectedTab.IsFavorite, Mode=TwoWay}"/>
            </MenuBarItem>

            <MenuBarItem Title="View">
                <ToggleMenuFlyoutItem Text="Панель макросов" IsChecked="{x:Bind viewModel.IsMacrosPanelVisible, Mode=TwoWay}"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Настройки"/>
            </MenuBarItem>

            <MenuBarItem Title="Help">
                <MenuFlyoutItem Text="About"/>
            </MenuBarItem>
        </MenuBar>

        <!-- File tab view-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TabView Grid.Column="0"
                     x:Name="TabMacroTextBox"
                     TabItemsSource="{x:Bind viewModel.Tabs}"
                     SelectedItem="{x:Bind viewModel.SelectedTab, Mode=TwoWay}"
                     AddTabButtonCommand="{x:Bind viewModel.CreateNewFileCommand}"
                     TabCloseRequested="TabView_TabCloseRequested">
                <TabView.TabItemTemplate>
                    <DataTemplate x:DataType="entities:LuaFile">
                        <TabViewItem Header="{x:Bind Name}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0" Margin="4"
                                         Text="{x:Bind Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"/>

                                <TextBlock Grid.Row="1" Margin="4"
                                           VerticalAlignment="Bottom"
                                           Text="Error text" />
                            </Grid>
                        </TabViewItem>
                    </DataTemplate>
                </TabView.TabItemTemplate>
            </TabView>

            <!-- Панель макросов -->
            <Grid Grid.Column="1"
                  Width="450"
                  Visibility="{x:Bind viewModel.IsMacrosPanelVisible, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Pivot Title="Список макросов">
                            <PivotItem Header="Макросы">
                                <TreeView Margin="0,6,0,0"
                                          ItemsSource="{x:Bind viewModel.Macros}"
                                          SelectedItem="{x:Bind viewModel.SelectedCommand, Mode=TwoWay}">
                                    <TreeView.ItemTemplate>
                                        <DataTemplate x:DataType="entities:CommandCategory">
                                            <TreeViewItem ItemsSource="{Binding Commands}"
                                                          Content="{Binding Name}" 
                                                          DoubleTapped="TreeViewItem_DoubleTapped"/>
                                        </DataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </PivotItem>
                            <PivotItem Header="Фоновые операции">
                                <TreeView Margin="0,6,0,0"
                                          ItemsSource="{x:Bind viewModel.BackgroudOperations}"
                                          SelectedItem="{x:Bind viewModel.SelectedCommand, Mode=TwoWay}">
                                    <TreeView.ItemTemplate>
                                        <DataTemplate x:DataType="entities:CommandCategory">
                                            <TreeViewItem ItemsSource="{Binding Commands}"
                                                          Content="{Binding Name}" 
                                                          DoubleTapped="TreeViewItem_DoubleTapped"/>
                                        </DataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </PivotItem>
                        </Pivot>
                    </Grid>

                    <StackPanel Grid.Row="1" Margin="8,12,8,24">
                        <TextBlock Text="Описание команды" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock Text="Какое то описание"/>
                    </StackPanel>
                    

                    <Button Grid.Row="2"
                            Margin="8"
                            Style="{StaticResource AccentButtonStyle}"
                            Command="{x:Bind viewModel.UpdateCommandsCommand}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE72C;"/>
                            <TextBlock Margin="8,0,0,0" Text="Обновить"/>
                        </StackPanel>
                    </Button>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
