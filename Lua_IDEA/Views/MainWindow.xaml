<Window
    x:Class="Lua_IDEA.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:Lua_IDEA.Entities"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Window appbar -->
        <Border x:Name="titleBar" Grid.Row="0" VerticalAlignment="Top">
            <TextBlock Text="Lua_IDEA" Margin="28,8,0,8" />
        </Border>
        
        <!-- Menu -->
        <MenuBar Grid.Row="1">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="New" Command="{x:Bind viewModel.AddFileCommand}"/>
                <MenuFlyoutItem Text="Open" Command="{x:Bind viewModel.OpenFileCommand}"/>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Save" Command="{x:Bind viewModel.SaveFileCommand}" />
                <MenuFlyoutItem Text="SaveAs" Command="{x:Bind viewModel.SaveFileAsCommand}" />
                <MenuFlyoutItem Text="Save All" Command="{x:Bind viewModel.SaveAllFileCommand}"/>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Close" Command="{x:Bind viewModel.CloseFileCommand}" />
            </MenuBarItem>

            <MenuBarItem Title="View">
                <ToggleMenuFlyoutItem Text="Панель макросов" IsChecked="{x:Bind viewModel.IsMacrosPanelVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Настройки"/>
            </MenuBarItem>

            <MenuBarItem Title="Help">
                <MenuFlyoutItem Text="About"/>
            </MenuBarItem>
        </MenuBar>
        
        <!-- File tab view-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TabView Grid.Column="0"
                     TabItemsSource="{x:Bind viewModel.Tabs}"
                     SelectedItem="{x:Bind viewModel.SelectedTab, Mode=TwoWay}"
                     AddTabButtonCommand="{x:Bind viewModel.AddFileCommand}"
                     TabCloseRequested="TabView_TabCloseRequested">
                <TabView.TabItemTemplate>
                    <DataTemplate x:DataType="entities:LuaFile">
                        <TabViewItem Header="{x:Bind Name}">
                            <TextBox Text="{x:Bind Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="4"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>
                        </TabViewItem>
                    </DataTemplate>
                </TabView.TabItemTemplate>                
            </TabView>

            <!-- Панель макросов -->
            <Grid Grid.Column="1" Width="400" Visibility="{x:Bind viewModel.IsMacrosPanelVisible, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="8">
                        <TextBlock Text="Список макросов" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <Button 
                            Content="X"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Command="{x:Bind viewModel.CloseMacroPanelCommand}"/>
                    </Grid>
                    
                    <TreeView Grid.Row="1"
                              ItemsSource="{x:Bind viewModel.Categories}" >
                        <TreeView.ItemTemplate>
                            <DataTemplate x:DataType="entities:CommandCategory">
                                <TreeViewItem ItemsSource="{Binding Commands}"
                                              Content="{Binding Name}" 
                                              DoubleTapped="TreeViewItem_DoubleTapped"/>
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                      
                    </TreeView>                    
                    <Grid
                        Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Text="Описание выбранной функции"/>
                        <Button 
                            Grid.Row="1"
                            Style="{StaticResource AccentButtonStyle}"
                            Command="{x:Bind viewModel.LoadCommandsCommand}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="&#xE72C;"/>
                                <TextBlock Margin="8,0,0,0" Text="Обновить"/>
                            </StackPanel>
                        </Button>

                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
